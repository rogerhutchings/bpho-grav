{% macro triangle(horizontalDirection, verticalDirection, fillClass) %}
  {% set horizontalDirection = horizontalDirection|default('left') %}
  {% set verticalDirection = verticalDirection|default('up') %}
  {% set fillClass = fillClass ? 'f-' ~ fillClass : 'f-lightest-blue' %}

  {% if (horizontalDirection == 'left') %}
    {% if (verticalDirection == 'up') %}
      {% set points = '0 200 200 0 200 200' %}
    {% elseif (verticalDirection == 'down') %}
      {% set points = '0 0 200 0 200 200' %}
    {% endif %}
  {% elseif (horizontalDirection == 'right') %}
    {% if (verticalDirection == 'up') %}
      {% set points = '0 0 200 200 0 200' %}
    {% elseif (verticalDirection == 'down') %}
      {% set points = '0 0 0 200 200 0' %}
    {% endif %}
  {% endif %}

  <svg
    role="presentation"
    viewBox="0 0 200 200"
    preserveAspectRatio="none"
    fill-rule="evenodd"
    class="w-100 h2 h3-ns db"
  >
    <polygon
      class="{{ fillClass }}"
      points="{{ points }}"
    >
    </polygon>
  </svg>
{% endmacro %}
