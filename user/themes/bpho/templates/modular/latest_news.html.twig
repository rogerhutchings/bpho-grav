{% embed 'partials/polygon.html.twig' %}
  {% set posts = page.find('/blog').children.order('date', 'desc').slice(0, 5) %}

  {% block title %}
    {{ header.title }}
  {% endblock %}

  {% block content %}
    <ul class="list pl0 ma0">

      {% for post in posts %}
        {% set firstImage = post.media.images|first|default(null) %}
        {{ dump(firstImage) }}

        <li class="bt b--moon-gray flex pt2 mb3">

          <time class="db w-20" datetime="{{ post.date|date("c") }}">
            <span class="f2 db lh-solid">
              {{ post.date|date('d') }}
            </span>
            <span class="f6 db">
              {{ post.date|date('F') }}
            </span>
          </time>

          <div class="w-80">
            <a href="{{ post.url }}" class="db black no-underline underline-hover">

              <div>
                {{ post.title }}
              </div>

              {% if firstImage %}
                <div class="ba b--moon-gray pa1 mt3">
                  {{ firstImage.html('', '', 'db w-100') }}
                </div>
              {% endif %}

              <div class="db tr mt2 fw2">
                Read more...
              </div>
            </a>
          </div>

        </li>
      {% endfor %}

    </ul>
  {% endblock content %}
{% endembed %}
