{% macro logo() %}
  {% set logoOptions = {
    classes: 'h2 pr3 dib',
    color: '#333'
  } %}

  {% include 'svgs/bpho-logo.svg.twig' with logoOptions %}
  <span class="dib">
    BPhO
  </span>
{% endmacro logo %}

<div class="fw4 flex items-center">
  {% if page.home() %}
    <span>
      {{ _self.logo() }}
    </span>
  {% else %}
    <a href="/" class="no-underline-hover black dim">
      {{ _self.logo() }}
    </a>
  {% endif %}
</div>
