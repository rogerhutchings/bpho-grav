{% import _self as macros %}

{% macro socialMediaLink(title, iconClass, url) %}
  <a href="{{ url }}" class="dib no-underline-hover white hover-gold f3 ml5 v-mid">
    <i class="fab {{ iconClass }}" aria-hidden="true"></i>
    <span class="clip">{{ title }}</span>
  </a>
{% endmacro socialMediaLink %}

{% macro footerLink(title, url) -%}
  <a class="link white underline-hover fw4" href="{{ url }}">
    {{- title -}}
  </a>
{%- endmacro footerLink %}

