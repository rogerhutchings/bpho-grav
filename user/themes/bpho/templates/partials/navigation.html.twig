{% from 'macros/home-button.html.twig' import homeButton  %}
{% from 'macros/close-button.html.twig' import closeButton  %}

{% set buttonOptions = {
  jsClass: 'js-close-menu',
  classes: '',
  textColor: 'white',
  text: 'Close'
} %}

{% macro topLevelLink(url, title) %}
  <a
    class="white"
    href="{{ url }}"
  >
    {{ title }}
  </a>
{% endmacro topLevelLink %}

{% macro loop(page) %}
  {% for p in page.children.visible %}
    <li class="mr3">
      {{ _self.topLevelLink(p.url, p.menu) }}
    </li>
  {% endfor %}
{% endmacro %}

<nav class="js-nav js-dn bg-navy white ph4 pv4 w-100 border-box flex justify-center">
  <div class="absolute left-2 top-50 translate-y-center flex justify-start items-center">
    {{ homeButton({ theme: 'light' }) }}
    {{ closeButton() }}
  </div>
  <div class="js-nav-items flex">
    <ul class="list pl0 ma0 flex flex-column items-center">
      {{ _self.loop(pages) }}
    </ul>
  </div>
</nav>
