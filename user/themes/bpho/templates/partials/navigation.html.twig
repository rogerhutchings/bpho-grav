{% from 'macros/menu-button.html.twig' import menuButton  %}

{% macro topLevelLink(url, title) %}
  <a
    class="white"
    href="{{ url }}"
  >
    {{ title }}
  </a>
{% endmacro topLevelLink %}

{% macro loop(page) %}
  {% for p in page.children.visible %}
    <li class="mr3">
      {{ _self.topLevelLink(p.url, p.menu) }}
    </li>
  {% endfor %}
{% endmacro %}

<nav class="js-nav js-dn bg-navy white ph4 pv4 w-100 flex">
  {{ menuButton({ jsClass: 'js-close-menu', classes: '', textColor: 'white', text: 'Close' }) }}
  <ul class="list pl0 ma0 flex">
    {{ _self.loop(pages) }}
  </ul>
</nav>
